# ybar configuration file
# Copy this file to ~/.ybar.conf and customize as needed

# Bar appearance
height = 24
opacity = 0.7
blur = true

# Elements to display
show_clock = true
show_workspace = true

# Clock configuration
# Format uses standard date format specifiers:
# HH = hour (00-23), mm = minute, ss = second
# yyyy = year, MM = month, dd = day
clock_format = yyyy-MM-dd HH:mm

# Text appearance
font_size = 13
# Font family options:
# - "system" (default): Uses system font for workspace, monospaced for clock
# - "monospace" or "monospaced": Uses monospaced font for both
# - Any valid font name (e.g., "Helvetica", "Menlo", "SF Mono")
font_family = system
text_color = #FFFFFF

# Workspace configuration
# Prefix to show before workspace name (e.g., "WS:" or "[" or empty)
workspace_prefix = 

# Alignment and spacing
# Center the clock on the bar (default: false, aligns to right)
center_clock = false
# Center the workspace indicator on the bar (default: false, aligns to left)
center_workspace = false
# Padding around elements in pixels (default: 10)
padding = 10
